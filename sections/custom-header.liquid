{% comment %}
  Custom header and it contains logo, announcment and a cta
{% endcomment %}
<header id="section-{{ section.id }}" class="custom-header gs-tt-header">
  {% comment %} logo area / mobile ham {% endcomment %}
  <div class="custom-header-logo-area div-header-logo-area logo-area">
    {% comment %} mobile option {% endcomment %}
    <span id="mb-hamburg" class="mobile-ham desktop-hide mobile-only">
      <button>
        <svg width="20" height="13" viewBox="0 0 20 13" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 6.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M1 1.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M1 11.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </span>

    {% comment %} logo {% endcomment %}
    <a href="{{ routes.root_url }}" class="logo">
      <img
        class="site-logo"
        src="{{ section.settings.header_logo |  image_url: width: 150 }}"
        width="auto"
        height="auto"
        alt="{{}}"
      >
    </a>
  </div>

  {% comment %} announcement {% endcomment %}
  <div class="custom-header-announcement div-header-announcement announcement no-mobile">
    <p>{{ section.settings.header_announcement }}</p>
  </div>

  {% comment %} CTA {% endcomment %}
  <div class="custom-header-cta div-header-cta cta no-mobile">
    <a href="{{ section.settings.header_cta_url }}">
      {{ section.settings.header_cta_text }}
      <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1.22205 4.80469L0.472046 4.80469L0.472046 6.30469L1.22205 6.30469L1.22205 4.80469ZM25.7524 6.08502C26.0453 5.79213 26.0453 5.31725 25.7524 5.02436L20.9794 0.251388C20.6865 -0.0415053 20.2116 -0.0415053 19.9187 0.251388C19.6259 0.544281 19.6259 1.01916 19.9187 1.31205L24.1614 5.55469L19.9187 9.79733C19.6259 10.0902 19.6259 10.5651 19.9187 10.858C20.2116 11.1509 20.6865 11.1509 20.9794 10.858L25.7524 6.08502ZM1.22205 6.30469L25.222 6.30469L25.222 4.80469L1.22205 4.80469L1.22205 6.30469Z" fill="black"/>
      </svg>
    </a>
  </div>

  {% comment %} mobile section {% endcomment %}
  <div id="header-mobile-content" class="header-mobile-area mobile-hide desktop-hide">
    <div class="mobile-content-wrapper">
      {% comment %} announcement {% endcomment %}
      <div class="custom-header-announcement div-header-announcement announcement">
        <p>{{ section.settings.header_announcement }}</p>
      </div>

      {% comment %} CTA {% endcomment %}
      <div class="custom-header-cta div-header-cta cta">
        <a href="{{ section.settings.header_cta_url }}">
          {{ section.settings.header_cta_text }}
          <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.22205 4.80469L0.472046 4.80469L0.472046 6.30469L1.22205 6.30469L1.22205 4.80469ZM25.7524 6.08502C26.0453 5.79213 26.0453 5.31725 25.7524 5.02436L20.9794 0.251388C20.6865 -0.0415053 20.2116 -0.0415053 19.9187 0.251388C19.6259 0.544281 19.6259 1.01916 19.9187 1.31205L24.1614 5.55469L19.9187 9.79733C19.6259 10.0902 19.6259 10.5651 19.9187 10.858C20.2116 11.1509 20.6865 11.1509 20.9794 10.858L25.7524 6.08502ZM1.22205 6.30469L25.222 6.30469L25.222 4.80469L1.22205 4.80469L1.22205 6.30469Z" fill="black"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
    /*header common css*/
    header.custom-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 1.61px 50.78px;
        background-color: #F5F5F5;
    }

    .desktop-hide {
        display: none;
    }
    /*header common css*/

    /*header logo*/
    .custom-header-logo-area .logo {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    /*header logo*/

    /*header announcement*/
    .custom-header-announcement p {
        font-size: 16px;
        font-family: "Jost", sans-serif;
    }

    /*header cta*/
    .custom-header-cta {
      display: flex;
      flex-direction: column;
    }
    .custom-header-cta a {
        padding: 12px 40px;
        color: {{ section.settings.header_cta_text_color }};
        background-color: {{ section.settings.header_cta_bk_color }};
        font-family: "Jost", sans-serif;
        font-size: 16px;
        text-transform: uppercase;
        text-decoration: none;
    }
    /*header cta*/

    /*mobile*/
    @media only screen and (max-width: 860px) {
        /*header common css*/
          header.custom-header {
            flex-direction: column;
            padding: 0px;
            background: none;
            position: relative;
        }

        .no-mobile, .mobile-hide {
            display: none;
        }

        .mobile-only, .mobile-show {
            display: block;
        }


        .mobile-ham button {
            border: 0;
            background: none;
        }
        /*header common css*/
        
        /*header logo*/
        .custom-header-logo-area {
            display: flex;
            width: 100%;
            padding: 18.5px;
            background-color: #f5f5f5;
        }

        .custom-header-logo-area .logo {
            flex: 100%;
        }

        .custom-header-logo-area .logo img {
            position: relative;
            left: -2%;
        }
        /*header logo*/

        /*header mobile specific area*/
        .header-mobile-area {
            text-align: center;
            position: absolute;
            background: #fff;
            width: 100%;
            top: 64px;
        }

        .header-mobile-area .custom-header-cta a {
          width: 80%;
          max-width: 225px;
          margin: 0 auto 20px;
        }
        /*header mobile specific area*/
    }
</style>

